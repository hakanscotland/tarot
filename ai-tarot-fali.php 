// Güvenlik kontrolü
if (!defined('ABSPATH')) {
    exit;
}

// Sabit değişkenler
define('AI_TAROT_VERSION', '1.0');
define('AI_TAROT_PLUGIN_DIR', plugin_dir_path(__FILE__));
define('AI_TAROT_PLUGIN_URL', plugin_dir_url(__FILE__));

// Ana sınıfı dahil et
require_once AI_TAROT_PLUGIN_DIR . 'includes/class-ai-tarot.php';

// Eklentiyi başlat
function run_ai_tarot() {
    $plugin = new AI_Tarot();
    $plugin->run();
}
run_ai_tarot();